{% for section in sections %}
<div id="{{ section.id }}" class="section{% if section.active %} active{% endif %}">
    <h2>{{ section.title }}</h2>

    {% if section.type == "charts" %}
        {% for size_group in section.size_groups %}
        <h3>{{ size_group.title }}</h3>
        <div class="charts-grid">
            {% for chart in size_group.charts %}
            <div class="chart-container">
                <h4>{{ chart.title }}</h4>
                <canvas id="{{ chart.id }}" width="400" height="300"></canvas>
            </div>
            {% endfor %}
        </div>
        {% endfor %}
    {% elsif section.type == "summary" %}
        <div class="summary-grid">
            {% for card in section.cards %}
            <div class="summary-card">
                <h3>{{ card.title }}</h3>
                {% if card.content_type == "list" %}
                <ul>
                    {% for item in card.items %}
                    <li>{{ item }}</li>
                    {% endfor %}
                </ul>
                {% else %}
                {{ card.content }}
                {% endif %}
            </div>
            {% endfor %}
        </div>
    {% elsif section.type == "environments" %}
        <div class="environments-grid">
            {% for env in section.environments %}
            <div class="environment-card">
                <h3>{{ env.name }}</h3>
                <div class="env-details">
                    {% if env.ruby_version %}
                    <p><strong>Ruby Version:</strong> {{ env.ruby_version }}</p>
                    {% endif %}
                    {% if env.platform %}
                    <p><strong>Platform:</strong> {{ env.platform }}</p>
                    {% endif %}
                    {% if env.architecture %}
                    <p><strong>Architecture:</strong> {{ env.architecture }}</p>
                    {% endif %}
                    {% if env.cpu %}
                    <p><strong>CPU:</strong> {{ env.cpu }}</p>
                    {% endif %}
                    {% if env.memory %}
                    <p><strong>Memory:</strong> {{ env.memory }}</p>
                    {% endif %}
                    {% if env.timestamp %}
                    <p><strong>Tested:</strong> {{ env.timestamp | date: "%Y-%m-%d %H:%M" }}</p>
                    {% endif %}
                    {% if env.serializer_versions %}
                    <details class="serializer-versions">
                        <summary><strong>Serializer Versions</strong></summary>
                        <div class="versions-grid">
                            {% for version_pair in env.serializer_versions %}
                            <div class="version-item">
                                <span class="lib-name">{{ version_pair[0] }}</span>
                                <span class="lib-version">{{ version_pair[1] }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </details>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        {{ section.content }}
    {% endif %}
</div>
{% endfor %}
